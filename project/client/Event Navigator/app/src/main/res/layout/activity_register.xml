<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/ic_light_theme_background"

    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGuidelineLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGuidelineRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/registerGuidelineTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/registerGuidelineTop"
        app:layout_constraintBottom_toBottomOf="@+id/register_text_4"
        app:layout_constraintStart_toStartOf="@id/registerGuidelineLeft"
        app:layout_constraintEnd_toEndOf="@id/registerGuidelineRight"
        android:background="@drawable/ic_round_bg_for_rv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintTop_toTopOf="@+id/registerGuidelineTop"
        app:layout_constraintVertical_bias="0"
        android:text="Регистрация"
        android:textSize="30sp"
        android:textColor="@color/text_color"
        android:id="@+id/register_top_text"

        />
    <TextView
        android:textSize="15sp"
        android:textColor="@color/text_color"
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/register_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="Логин:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/register_login"
        app:layout_constraintTop_toBottomOf="@+id/register_top_text"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/register_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLength="50"
        android:gravity="center"
        android:hint="Логин"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:textColorHint="@color/dark_text_color"
        android:textColor="@color/dark_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/register_text_1"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/text_color"
        android:id="@+id/register_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Пароль:"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintTop_toBottomOf="@+id/register_login"
        app:layout_constraintVertical_bias="0" />
    <EditText
        android:maxLength="50"
        android:textSize="20sp"
        android:id="@+id/register_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:hint="Пароль"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:textColorHint="@color/dark_text_color"
        android:textColor="@color/dark_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/register_text_2"/>
    <TextView
        android:textSize="15sp"
        android:textColor="@color/text_color"
        app:layout_constraintHorizontal_bias="0"
        android:id="@+id/register_text_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="Имя пользователя:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/register_name"
        app:layout_constraintTop_toBottomOf="@+id/register_password"
        app:layout_constraintVertical_bias="0" />
    <EditText
        android:textSize="20sp"
        android:id="@+id/register_name"
        android:layout_width="0dp"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:textColorHint="@color/dark_text_color"
        android:textColor="@color/dark_text_color"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:maxLength="100"
        android:hint="Имя пользователя"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/register_text_3"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/register_text_4"
        app:layout_constraintTop_toBottomOf="@id/register_name"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/register_finish"
        android:textColor="@color/dark_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textSize="17sp"
        android:background="@drawable/ic_light_theme_light_blue_rect_huge"
        android:text="Зарегистрироваться"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/registerGuidelineRight"
        app:layout_constraintStart_toStartOf="@+id/registerGuidelineLeft"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toBottomOf="@+id/register_text_4"/>

</androidx.constraintlayout.widget.ConstraintLayout>