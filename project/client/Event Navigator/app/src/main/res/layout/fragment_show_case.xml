<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_round_bg_for_rv"
    tools:context=".event_showcase.ShowCaseFragment"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showcase_name"
        android:textSize="20sp"
        android:textColor="@color/dark_text_color"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showcase_date"
        android:textSize="20sp"
        android:textColor="@color/dark_text_color"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        />


    <TextView
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/dark_text_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/showcase_address"
        android:gravity="center"
        />
   <androidx.constraintlayout.widget.ConstraintLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:textColorHint="@color/dark_text_color"
        android:textColor="@color/dark_text_color"
        android:layout_height="wrap_content"
        android:id="@+id/showcase_showEvent"
        app:layout_constraintEnd_toStartOf="@+id/showcase_close"
        android:layout_marginLeft="50dp"
        android:textSize="18sp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/ic_light_teme_light_blue_rect"
        android:text="Посмотреть"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
       <androidx.appcompat.widget.AppCompatButton
           android:layout_width="0dp"
           android:textSize="18sp"
           android:layout_marginLeft="5dp"
           android:layout_marginRight="50dp"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="10dp"
           android:background="@drawable/ic_light_teme_light_blue_rect"
           android:layout_height="wrap_content"
           app:layout_constraintStart_toEndOf="@+id/showcase_showEvent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintTop_toTopOf="parent"
           android:id="@+id/showcase_close"
           android:textColor="@color/dark_text_color"
           android:text="Закрыть"
           android:layout_gravity="center"
           android:gravity="center"
           />
    <TextView
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/showcase_showEvent"
        android:layout_height="wrap_content"
        />
   </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>